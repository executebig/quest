<script src="http://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
<script src="/static/assets/sisyphus.min.js"></script>
<script>
  $(function () {
    $("form").sisyphus();
  });
</script>
{{/extend}}