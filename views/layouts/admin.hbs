        </section>

        {{#unless noTabs}}
        {{> tabs}}
        {{/unless}}

        <div class="container main">
            {{{body}}}
        </div>
    </div>

    {{>footer}}

    <script src="https://use.fontawesome.com/releases/v5.3.1/js/all.js" type="text/javascript" defer></script>
    {{{block 'foot-inject'}}}
